<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="310"
        Height="150"
        Background="DarkBlue"
        >
	<Grid>
		<Image Width="310"
			   Height="150"
			   Source="ms-appx:///Resources/Backgrounds/background-310x150.png"
			   />
		<Grid Margin="8">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>		

			<StackPanel Grid.Row="0"
						Grid.Column="0"
						Grid.ColumnSpan="2"
						HorizontalAlignment="Stretch"
						Orientation="Vertical"
						>
				<TextBlock x:Name="TitleText" Foreground="White" FontSize="15" />
				<TextBlock x:Name="DescriptionText" TextWrapping="Wrap" Foreground="White" FontSize="12" />
			</StackPanel>
		
			<Image Grid.Row="1"
				   Grid.Column="0"
				   HorizontalAlignment="Left"
				   VerticalAlignment="Bottom"
				   x:Name="StateImage"
				   Width="50"
				   Height="50"
				   />
		
			<Image Grid.Row="1"
				   Grid.Column="1"
				   HorizontalAlignment="Right"
				   VerticalAlignment="Bottom"
				   Source="ms-appx:///Resources/logo.png"
				   Width="50"
				   Height="50"
				   />
		</Grid>
	</Grid>
</Border>
